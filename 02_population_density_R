#Spatial Ecology in R 16/10 

# A package is needed for point pattern analysis
install.packages("spatstat")
library(spatstat)
# Code related to population ecology


# let's use the bei data:
# data description:
# https://CRAN.R-project.org/package=spatstat

bei

#points x,y (vectors) and matrix on raster 
# plotting the data
plot(bei)

# changing dimension - cex
plot(bei, cex=.2)

# changing the symbol - pch
plot(bei, cex=.2, pch=19)

# additional datasets
bei.extra
plot(bei.extra)

# let's use only part of the dataset: elev
plot(bei.extra$elev)
elevation <- bei.extra$elev
plot(elevation)

# second method to select elements
elevation2 <- bei.extra[[1]]
plot(elevation2)
dev.off()

# passing from points to a countinuous surface
densitymap <- density(bei)
plot(densitymap)
plot(bei)
plot(densitymap)
plot(bei)
points(bei, cex=.2)
points(bei, col= "green")

cl <- colorRampPalette(c("black", "red", "orange", "yellow"))(100)
plot(densitymap, col=cl)

cl <- colorRampPalette(c("black", "red", "orange", "yellow"))(4)
plot(densitymap, col=cl)

clnew <- colorRampPalette(c("dark blue", "blue", "light blue"))(100)
plot(densitymap, col=clnew)

bei.extra
#elevation <- bei.extra[[1]]
#1° elevation
#2° gradient
plot(bei.extra)

elev <- bei.extra[[1]] # bei.extra$elev
plot(elev)

plot(elevation2)


# multiframe with basically one row on graf and two colonne 
#the function is par 

#c = concatenate elements, it's different of par 
par(mfrow=c(1,2))
plot(densitymap)
plot(elev)

par(mfrow=c(1,2))
plot(densitymap)
plot(elevation2)

#Exercise : make a multiframe with maps one of the other
par(mfrow=c(2,1))
plot(densitymap)
plot(elevation2)

#one frined to clear graphs
dev.off()

plot(elevation2)

par(mfrow=c(2,1))
plot(densitymap)
plot(elev)

par(mfrow=c(1,3))
plot(bei)
plot(densitymap)
plot(elev)
